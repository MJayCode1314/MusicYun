<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    >
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/user_head"
        android:scaleType="fitXY"
        android:src="@drawable/ic_music"
        android:background="@drawable/ic_box_background"
        />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_width="300dp"
        android:background="@drawable/ic_box_gray"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/share_title"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:background="@drawable/id_btn_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/song_linear"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_music"
                android:id="@+id/share_album_img"
                />
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/share_song_name"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>